---
const {url,date,title, description, tag} = Astro.props;
const dateOptions: object = {
	year: "numeric",
	month: "long",
	day: "numeric",
};

const formattedPublishDate = new Date(date).toLocaleDateString("en-US", dateOptions);
---



<a href={url} >
<div class="my-4 p-4  border-3 pl-4 blog-container ">
    <li class= "list-none">
     
        <div class="flex flex-col">
          <h2 >{title}</h2>
          <p class="text-sm  pubDate">{formattedPublishDate}</p>
        </div>
     
   
      <p class =" text-sm">{description} </p>
      <p class="tag"> #{tag} </p>
      </a>

    </li>
</div>











<style>

.blog-container {
  position: relative;
  border-color: rgb(48, 48, 47);
  background-color: rgba(241, 234, 234, 0.943);
  border-radius: 4% 2% 73.5% 73.5% / 72% 20% 3.5% 2.5%;
  border-width: 2px;
  box-shadow: 2px 2px 0 rgba(0, 0, 0, 0.2);
  transition: box-shadow 0.3s ease;
}
.blog-container:hover  {
  box-shadow: 4px 4px 0 rgba(0, 0, 0, 0.3);
}

.blog-container:hover h2 {
  text-decoration: underline;
}

.tag {
  position: absolute;
  top: 0;
  right: 0;
  padding: 1rem;
  font-size: 1rem;
}

.pubDate {
  font-size: 1.2rem;
  color: "#cc5a2e";
}



</style>