---
const { text, url} = Astro.props;

---


<div>
    <a href={url}>{text}</a>

    <svg class= "hidden" viewBox="0 0 100 10" preserveAspectRatio="none">
      <path
        d="M30 5 Q50 3 50 5 T70 5"
        class="draw-line"
        stroke= "hsl(30 100% 19.1%)"
        stroke-width="3"
        fill="none"
        stroke-linecap="round"
      />
    </svg>
</div>


<style>







.draw-line {
    stroke-dasharray: 100;
    stroke-dashoffset: 100;
    transition: stroke-dashoffset 0.3s ease-in-out;
  }

   a:hover .draw-line {
    stroke-dashoffset: 0;
  }

html.dark .draw-line {
    stroke: hsla(0, 0%, 100%, 0.886)
  }







</style>