---
import BaseLayout from '../layouts/BaseLayout.astro';
const pageTitle = "Projects";
const allProjects = Object.values(import.meta.glob('./projects/*.md', { eager: true }));
---
<BaseLayout pageTitle={pageTitle}>

    <div class="flex flex-col items-center">
        {allProjects.map((project: any) => (
            <div class="w-full max-w-2xl p-4 mb-4 border rounded-lg shadow-md bg-white">
                <h3 class="text-xl font-bold mb-2">{project.frontmatter.title}</h3>
                <p class="text-gray-700 mb-2">{project.frontmatter.description}</p>
                <a href={project.url} class="text-blue-500 hover:underline">View Project</a>
            </div>
        ))}
    </div>
    
  

  
 
 
</BaseLayout>